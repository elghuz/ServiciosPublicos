<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/inputNombreObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la obra" />

        <EditText
            android:id="@+id/inputDescripcionObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:layout_marginTop="8dp" />

        <!-- SUPERVISOR -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supervisor"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/spinnerSupervisor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- TIPO UBICACIÓN -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de ubicación"
            android:layout_marginTop="12dp" />

        <RadioGroup
            android:id="@+id/radioGroupTipoUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioPunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Punto" />

            <RadioButton
                android:id="@+id/radioRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radio" />

            <RadioButton
                android:id="@+id/radioPoligono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Polígono" />
        </RadioGroup>

        <!-- RADIO EN METROS (solo si se usa radio) -->
        <EditText
            android:id="@+id/inputRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Radio en metros (solo si eliges Radio)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <!-- MAPA -->
        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnGuardarObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar obra"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
